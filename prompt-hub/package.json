{
  "name": "prompt-hub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:watch": "concurrently \"next dev --turbopack\" \"node scripts/watch-prompts.js\"",
    "build": "next build --turbopack",
    "postbuild": "node scripts/build-simple.js",
    "start": "next start",
    "start:watch": "concurrently \"next start\" \"node scripts/watch-prompts.js\"",
    "lint": "eslint",
    "index": "node scripts/build-simple.js",
    "watch": "node scripts/watch-prompts.js",
    "watch:prod": "node scripts/production-watcher.js",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:p1": "playwright test --grep \"@P1\"",
    "test:p2": "playwright test --grep \"@P2\"",
    "test:p3": "playwright test --grep \"@P3\"",
    "test:critical": "playwright test --grep \"@P1\"",
    "test:full": "playwright test"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tabler/icons-react": "^3.34.1",
    "chokidar": "^3.5.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "flexsearch": "^0.8.205",
    "framer-motion": "^12.23.12",
    "gray-matter": "^4.0.3",
    "lenis": "^1.3.9",
    "lucide-react": "^0.541.0",
    "next": "15.5.0",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-intersection-observer": "^9.16.0",
    "rehype": "^13.0.2",
    "remark": "^15.0.1",
    "shiki": "^3.11.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "ws": "^8.16.0",
    "zod": "^4.1.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5"
  }
}
